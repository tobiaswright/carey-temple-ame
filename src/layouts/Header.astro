---
import '../styles/global.css'
import careyTempleLogo from '../assets/carey-temple-logo.png';
---

<header>
	<div  class="bg-white p-5 ">
		<div class="hidden md:block">
			<ul class="list-none text-center font-bold">
				<li class="inline-block pr-5"><a href="../">Home</a></li>|
				<li class="inline-block px-5"><a href="../events">Events</a></li>|
				<li class="inline-block px-5"><a href="../history">History</a></li>|
				<li class="inline-block pl-5"><a href="../pantry">Food pantry EVERY Wednesday</a></li>
			</ul>
		</div>

		<div class="flex flex-col items-center justify-center">
			<a href="/"><img src={careyTempleLogo.src} alt="Carey Temple AME Church" class="sm:w-85 mb-4" /></a>
		</div>
	</div>

	<div class="flex flex-col items-center">
		<h2 class="text-white text-6xl font-black text-center shadow-2xl lato-bold">Join us this Sunday</h2>
		<div class="rounded-full bg-blue-500 p-2 w-70 my-5 text-white text-center lato-bold">Sunday Service<br>starts @ 11:00a</div>
	</div>
</header>
